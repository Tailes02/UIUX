<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uiux.HomeLayoutRemakeController">
    <GridPane fx:id="mainGrid" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Define 5 columns with equal width -->
        <columnConstraints>
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
        </columnConstraints>
        <!-- Define 5 rows with equal height -->
        <rowConstraints>
            <RowConstraints percentHeight="20" />
            <RowConstraints percentHeight="20" />
            <RowConstraints percentHeight="20" />
            <RowConstraints percentHeight="20" />
            <RowConstraints percentHeight="20" />
        </rowConstraints>
        <!-- Grid content goes here -->
    </GridPane>
</AnchorPane>
